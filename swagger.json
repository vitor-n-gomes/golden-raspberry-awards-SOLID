{
  "openapi": "3.0.0",
  "paths": {
    "/movies": {
      "post": {
        "operationId": "CreateMovieController_create",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateMovieReqDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Movie created successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MovieItemResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input."
          }
        },
        "summary": "Create a new movie",
        "tags": [
          "Movies"
        ]
      },
      "get": {
        "operationId": "ListMovieController_handle",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Movies retrieved successfully."
          }
        },
        "summary": "List all movies",
        "tags": [
          "Movies"
        ]
      }
    },
    "/movies/{id}": {
      "delete": {
        "operationId": "DeleteMovieController_handle",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Movie deleted successfully."
          },
          "404": {
            "description": "Movie not found."
          }
        },
        "summary": "Delete a movie by ID",
        "tags": [
          "Movies"
        ]
      },
      "get": {
        "operationId": "FindMovieController_handle",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Movie found.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MovieItemResponseDto"
                }
              }
            }
          },
          "404": {
            "description": "Movie not found."
          }
        },
        "summary": "Find a movie by ID",
        "tags": [
          "Movies"
        ]
      },
      "put": {
        "operationId": "UpdateMovieController_handle",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateMovieReqDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Movie updated successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MovieItemResponseDto"
                }
              }
            }
          },
          "404": {
            "description": "Movie not found."
          }
        },
        "summary": "Update a movie by ID",
        "tags": [
          "Movies"
        ]
      }
    },
    "/analyze-producer-award-intervals": {
      "get": {
        "operationId": "AnalyzeProducerAwardIntervalsController_handle",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Producer intervals result.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProducerIntervalsResultResponseDto"
                }
              }
            }
          },
          "404": {
            "description": "Movies not found."
          }
        },
        "summary": "Analyze producer awards intervals",
        "tags": [
          "AnalyzeProducerAwardIntervals"
        ]
      }
    }
  },
