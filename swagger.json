  "servers": [],
  "components": {
    "schemas": {
      "CreateMovieReqDto": {
        "type": "object",
        "properties": {
          "year": {
            "type": "number",
            "description": "Year of the movie",
            "example": 1994
          },
          "title": {
            "type": "string",
            "description": "Title of the movie",
            "example": "The Shawshank Redemption"
          },
          "studios": {
            "type": "string",
            "description": "Studios involved in the movie",
            "example": "Castle Rock Entertainment"
          },
          "producers": {
            "type": "string",
            "description": "Producers of the movie",
            "example": "Niki Marvin"
          },
          "winner": {
            "type": "boolean",
            "description": "Indicates if the movie is a winner",
            "example": true
          }
        },
        "required": [
          "year",
          "title",
          "studios",
          "producers"
        ]
      },
      "MovieItemResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "ID of the movie",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          },
          "year": {
            "type": "number",
            "description": "Year of the movie",
            "example": 1994
          },
          "title": {
            "type": "string",
            "description": "Title of the movie",
            "example": "The Shawshank Redemption"
          },
          "studios": {
            "type": "string",
            "description": "Studios involved in the movie",
            "example": "Castle Rock Entertainment"
          },
          "producers": {
            "type": "string",
            "description": "Producers of the movie",
            "example": "Niki Marvin"
          },
          "winner": {
            "type": "boolean",
            "description": "Indicates if the movie is a winner",
            "example": true
          }
        },
        "required": [
          "id",
          "year",
          "title",
          "studios",
          "producers"
        ]
      },
      "UpdateMovieReqDto": {
        "type": "object",
        "properties": {
          "year": {
            "type": "number",
            "description": "Year of the movie",
            "example": 1994
          },
          "title": {
            "type": "string",
            "description": "Title of the movie",
            "example": "The Shawshank Redemption"
          },
          "studios": {
            "type": "string",
            "description": "Studios involved in the movie",
            "example": "Castle Rock Entertainment"
          },
          "producers": {
            "type": "string",
            "description": "Producers of the movie",
            "example": "Niki Marvin"
          },
          "winner": {
            "type": "boolean",
            "description": "Indicates if the movie is a winner",
            "example": true
          }
        },
        "required": [
          "year",
          "title",
          "studios",
          "producers"
        ]
      },
      "ProducerIntervalsResponseDto": {
        "type": "object",
        "properties": {
          "producer": {
            "type": "string",
            "description": "Name of the producer"
          },
          "interval": {
            "type": "number",
            "description": "Interval between wins"
          },
          "previousWin": {
            "type": "number",
            "description": "Year of the previous win"
          },
          "followingWin": {
            "type": "number",
            "description": "Year of the following win"
          }
        },
        "required": [
          "producer",
          "interval",
          "previousWin",
          "followingWin"
        ]
      },
      "ProducerIntervalsResultResponseDto": {
        "type": "object",
        "properties": {
          "min": {
            "description": "List of producers with the minimum intervals between awards",
            "example": [
              {
                "producer": "Producer A",
                "interval": 1,
                "previousWin": 2000,
                "followingWin": 2001
              }
            ],
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ProducerIntervalsResponseDto"
            }
          },
          "max": {
            "description": "List of producers with the maximum intervals between awards",
            "example": [
              {
                "producer": "Producer B",
                "interval": 10,
                "previousWin": 1990,
                "followingWin": 2000
              }
            ],
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ProducerIntervalsResponseDto"
            }
          }
        },
        "required": [
          "min",
          "max"
        ]
      }
    }
